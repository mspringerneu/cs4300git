<scene>
    <instance name="sphere" path="models/sphere.obj" />
    <instance name="box" path="models/box.obj" />
    <instance name="cylinder" path="models/cylinder.obj" />
    <instance name="cone" path="models/cone.obj" />
    <image name="default" path="textures/white.png" />
    <group name="roller-coaster-scene">
        <light name="main-light">
            <ambient>1 1 1</ambient>
            <diffuse>1 1 1</diffuse>
            <specular>1 1 1</specular>
            <position>0 500 0 1</position>
            <spotDirection>0 -1 0</spotDirection>
        </light>
        <transform>
            <set>
                <translate>0 0 0</translate>
                <scale> 1 1 1 </scale>
            </set>
            <group name="all-cars">
                <transform name="car0-transform">
                    <set>
                        <translate>0 0 -630</translate>
                    </set>
                    <group name="car0" from="scenegraphs/car.xml"></group>
                </transform>
                <transform name="car1-transform">
                    <set>
                        <translate>0 0 -70</translate>
                    </set>
                    <group name="car1" from="scenegraphs/car.xml"></group>
                </transform>
                <transform name="car2-transform">
                    <set>
                        <translate>0 0 -210</translate>
                    </set>
                    <group name="car2" from="scenegraphs/car.xml"></group>
                </transform>
                <transform name="car3-transform">
                    <set>
                        <translate>0 0 -350</translate>
                    </set>
                    <group name="car3" from="scenegraphs/car.xml"></group>
                </transform>
                <transform name="car4-transform">
                    <set>
                        <translate>0 0 -490</translate>
                    </set>
                    <group name="car4" from="scenegraphs/car.xml"></group>
                </transform>
            </group>
        </transform>
    </group>
</scene>